{
    "extends": [
        "prettier",
        "prettier/standard",
        "prettier/react",
        "plugin:react/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "warn",
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true
            }
        ]
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    }
}
